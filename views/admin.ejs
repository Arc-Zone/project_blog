<%- include('./includes/header.ejs') %>
<div class="container"> 
    <h1>Joueur</h1>
    <table class="table mt-2">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Pseudo</th>
            <th scope="col">Deck 1</th>
            <th scope="col">Deck 2</th>
            <th scope="col">Deck 3</th>
            <th scope="col">City</th>
            <th scope="col">Gerer</th>
        </tr>
        </thead>
        <tbody>
            <%for (info of infos)  {%>
        <tr>
            <th scope="row"><%=info.id%></th>
                <td><%=info.pseudo%></td>
                <td><%=info.deck_1%></td>
                <td><%=info.deck_2%></td>
                <td><%=info.deck_3%></td>
                <td><%=info.city%></td>
                <td><button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#exampleModal<%=info.id%>">
                    Supprimer
                    </button>
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModal<%=info.id%>" aria-hidden="true">
                    <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Supression</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                        Est tu sur de vouloir supprimer cette Utilisateur
                        </div>
                        <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                        <a type="button" class="btn btn-primary" href="/admin/<%=userDelete.id%>">Supprimer</a>
                        </div>
                    </div>
                    </div>
                </div>
            </td>
        </tr>
        <%}%>
        </tbody>
    </table>
</div>


<%- include('./includes/footer.ejs') %>